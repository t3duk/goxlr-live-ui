{
  "name": "goxlr-mic-light",
  "version": "1.0.1",
  "description": "Uses localhost:14564 and Fader A to show when it is unmuted or live.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx run-s build:*",
    "build:webpack": "npx webpack",
    "build:tsc": "npx tsc",
    "start": "npx electron .",
    "package": "npx electron-builder"
  },
  "build": {
    "appId": "uk.t3d.goxlrmiclight",
    "productName": "GoXLR Mic Light",
    "directories": {
      "output": "bin/"
    },
    "win": {
      "icon": "./src/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "electron": "^29.1.6",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
